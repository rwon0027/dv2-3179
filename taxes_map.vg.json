{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Taxes as a Share of Cigarette Price by Country",
  "width": "container",
  "height": 500,
  "autosize": {"type": "fit", "contains": "padding"},
  "projection": {"type": "equalEarth"},
  "background": "#e6f2ff",

  "params": [
    {
      "name": "selectedYear",
      "value": 2022,
      "bind": {"input": "range", "min": 2008, "max": 2022, "step": 2, "name": "Select Year: "}
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"calculate": "datum.properties.NAME", "as": "CountryName"}
      ],
      "mark": {"type": "geoshape", "fill": "#eeeeee", "stroke": "#cccccc"},
      "encoding": {
        "tooltip": [
          {"field": "CountryName", "type": "nominal", "title": "Country"}        ]
      }
    },

    {
      "data": {"url": "taxes-as-a-share-of-cigarette-price.csv"},
      "transform": [
        {"filter": "toNumber(datum.Year) == selectedYear"},
        {
          "lookup": "Code",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.ADM0_A3",
            "fields": ["type", "properties", "geometry"]
          },
          "as": ["type", "properties", "geometry"]
        },
        {"calculate": "datum.properties && datum.properties.NAME", "as": "CountryName"}
      ],
      "mark": {"type": "geoshape", "stroke": "#cccccc"},
      "encoding": {
        "shape": {"field": "geometry", "type": "geojson"},
        "color": {
          "field": "Taxes as a share of cigarette price",
          "type": "quantitative",
          "scale": {"scheme": "greens"},
          "title": "Tax Share (%)"
        },
        "tooltip": [
          {"field": "CountryName", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {
            "field": "Taxes as a share of cigarette price",
            "type": "quantitative",
            "title": "Tax Share (%)",
            "format": ".1f"
          }
        ]
      }
    }
  ]
}
