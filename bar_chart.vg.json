{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Global Deaths per Year (starting 1980)" },
  "width": "container",
  "height": 400,
  "autosize": {"type": "fit", "contains": "padding"},


  "data": { "url": "top-causes-global.csv" },

  "params": [
    {
      "name": "YearsShown",
      "value": 25,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 50,
        "step": 1,
        "name": "Show number of years (from 1980): "
      }
    }
  ],

  "transform": [
    { "filter": "datum.measure == 'Deaths'" },
    { "filter": "datum.location == 'Global'" },
    { "filter": "datum.metric == 'Number'" },

    { "filter": "datum.year >= 1980 && datum.year <= 1980 + YearsShown - 1" },

    {
      "aggregate": [{ "op": "sum", "field": "val", "as": "deaths" }],
      "groupby": ["year"]
    }
  ],

  "mark": "bar",

  "encoding": {
    "x": { "field": "year", "type": "ordinal", "sort": "ascending", "title": "Year" },
    "y": {
      "field": "deaths",
      "type": "quantitative",
      "title": "Deaths (number)",
      "axis": { "format": ".2s" }
    },
    "tooltip": [
      { "field": "year", "type": "ordinal", "title": "Year" },
      { "field": "deaths", "type": "quantitative", "title": "Deaths", "format": ",.0f" }
    ]
  }
}
